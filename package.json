{
  "scripts": {
    "dev": "run-p dev:*",
    "dev:vite": "pnpm -C packages/app dev",
    "dev:tsc": "pnpm tsc --watch --preserveWatchOutput",
    "dev:tauri": "tauri dev",
    "build": "run-s build:*",
    "build:vite": "pnpm -C packages/app build",
    "build:tauri": "tauri build",
    "dev-vite": "pnpm -C packages/app dev",
    "tsc": "tsc -b packages/app",
    "lint": "run-s lint:*",
    "lint-check": "run-s lint-check:*",
    "lint:prettier": "prettier --write --cache .",
    "lint-check:prettier": "npm run prettier -- --check"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "typescript": "^4.9.4"
  }
}
